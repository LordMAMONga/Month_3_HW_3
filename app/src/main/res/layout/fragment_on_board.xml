<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.on_board.OnBoardFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_on_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="188dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/vp_on_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_indicator1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/iv_indicator2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/iv_indicator3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/circle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>